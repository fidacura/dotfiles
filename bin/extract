#!/usr/bin/env bash
# universal archive extraction utility 
# Usage: extract <archive-file>

set -euo pipefail

if [[ $# -ne 1 ]]; then
    echo "Usage: extract <archive-file>"
    echo "Supports: tar.gz, tar.bz2, tar.xz, zip, rar, 7z, gz, bz2"
    exit 1
fi

FILE="$1"

if [[ ! -f "$FILE" ]]; then
    echo "‚ùå File not found: $FILE"
    exit 1
fi

echo "üì¶ Extracting: $FILE"

case "$FILE" in
    *.tar.bz2)   tar xjf "$FILE"     ;;
    *.tar.gz)    tar xzf "$FILE"     ;;
    *.tar.xz)    tar xJf "$FILE"     ;;
    *.bz2)       bunzip2 "$FILE"     ;;
    *.rar)       unrar x "$FILE"     ;;
    *.gz)        gunzip "$FILE"      ;;
    *.tar)       tar xf "$FILE"      ;;
    *.tbz2)      tar xjf "$FILE"     ;;
    *.tgz)       tar xzf "$FILE"     ;;
    *.zip)       unzip "$FILE"       ;;
    *.Z)         uncompress "$FILE"  ;;
    *.7z)        7z x "$FILE"        ;;
    *)           echo "‚ùå Unsupported archive format: $FILE" ;;
esac

echo "‚úÖ Extraction complete!"